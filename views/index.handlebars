{{!-- This file is where the main layout for the website is created. --}}

<section class="hero is-primary is-fullheight is-bold">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">Another One Bites the Burger</h1>
            <h3 class="subtitle">We love 80s music...and so do our burgers.</h3>
        </div>
        <img src="assets/images/musicBurger.jpg" alt="Hamburger with Headphones Dancing" id="dancingBurger">
    </div>
</section>

<section class="hero is-light is-fullheight is-bold">
    <div class="hero-body">
        <div class="container">


            <div class="columns">
                <div class="column is-half">
                    <nav class="panel is-primary">
                        <p class="panel-heading" id="panel">Don't You Want Me, Baby?: Order Up!</p>

                        <div class="card">
                            <div class="card-content">
                                <div class="content">

                                    <ul>
                                        {{#each burgers}}
                                        {{#unless devoured}}
                                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                                        <button type="button" class="eatburger button is-primary" id="eatbutton"
                                            data-id="{{this.id}}" data-newDevoured="{{devour}}"><span><i
                                                    class="fa fa-utensils"></i></span></button>
                                        <hr>
                                        {{/unless}}
                                        {{/each}}
                                    </ul>

                                </div>
                            </div>
                        </div>
                    </nav>
                </div>


                <div class="column is-half">
                    <nav class="panel is-primary">
                        <p class="panel-heading" id="panel">Hungry Like the Wolf: Devoured Burgers</p>

                        <div class="card">
                            <div class="card-content">
                                <div class="content">

                                    <ul>
                                        {{#each burgers}}
                                        {{#if devoured}}
                                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                                        <button type="button" class="trashburger button is-primary" id="trashbutton"
                                            data-id="{{this.id}}" data-newDevoured="{{devour}}"><span
                                                class="far fa-trash-alt"></span></button>
                                        <hr>
                                        {{/if}}
                                        {{/each}}
                                    </ul>

                                </div>
                            </div>
                        </div>
                    </nav>
                </div>

            </div>

            <section>
                <div class="columns">

                    <div class="column is-1"></div>

                    <div class="column is-10">
                        <nav class="panel is-primary">
                            <p class="panel-heading" id="panel">What's Love Got to Do, Got to Do With It?</p>

                            <div class="block">
                                <form>
                                    <div id="createdBurgers"></div>
                                    <div class="field">
                                        <label for="newburger"></label>
                                        <input class="input" type="text" placeholder="Who Needs a Heart When a Burger Can Be Eaten?" id="newburger">
                                    </div>
                                    <div class="field">
                                        <div class="buttons">
                                            <button type="submit" class="button" id="addburger">Place Order</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </nav>
                    </div>

                    <div class="column is-1"></div>
            </section>

        </div>
    </div>
</section>